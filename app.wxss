/**app.wxss**/

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
}

page {
  background: #f2f2f2;
  box-sizing: border-box;
}

image {
  width: 100%;
  height: 100%;
}

page .i-icon {
  display: block;
}

.clearfix::after {
  content: "";
  display: block;
  height: 0;
  clear: both;
}

.input_cell {
  background: #fff;
  padding-left: 30rpx;
  margin: 15rpx 0;
  position: relative;
}

.input_cell .input_cell_row {
  border-bottom: solid 1px #e5e5e5;
  padding: 20rpx 0;
  height: 80rpx;
  box-sizing: border-box;
  position: relative;
  background: #ffffff;
}

.input_cell .input_cell_row:last-child {
  border-bottom: none;
}

.input_cell .input_cell_row .label {
  font-size: 28rpx;
  line-height: 40rpx;
  height: 40rpx;
  float: left;
  color: #333;
  width: 180rpx;
  white-space: nowrap
}

.input_cell_icon {
  float: left;
  width: 40rpx;
  height: 40rpx;
  margin-right: 15rpx;
}

i-icon {
  position: relative;
  top: -4rpx;
}

button::after {
  border: none;
}

.input_cell_row .form_item {
  text-align: right;
  float: right;
  width: 540rpx;
  height: 40rpx;
  line-height: 40rpx;
  font-size: 28rpx;
  color: #333333;
  padding-right: 30rpx;
  box-sizing: border-box;
}
.input_cell_row .form_item text {
  color: #999999;
}
.input_cell .input_cell_row .is_link{
  width: auto;
}
.input_cell_row .is_link::after {
  content: " ";
  display: inline-block;
  width: 12rpx;
  height: 12rpx;
  position: absolute;
  top: 50%;
  right: 30rpx;
  border-width: 2rpx 2rpx 0 0;
  border-color: #999;
  border-style: solid;
  transform: translateY(-50%) matrix(0.71, 0.71, -.71, 0.71, 0, 0);
}

.input_cell .tip_text {
  position: absolute;
  height: 40rpx;
  line-height: 40rpx;
  padding-left: 20rpx;
  bottom: -40rpx;
  left: 0;
  right: 0;
  text-align: left;
  color: #999;
  font-size: 24rpx;
}

.i-grid-item {
  padding: 0 !important;
}

.modal_tab {
  margin: 0 auto;
  text-align: center;
}

.block {
  background: #fff;
  margin-bottom: 20rpx;
}

.loading{
    display: inline-block;
    margin-right: 12px;
    vertical-align: middle;
    width: 20px;
    height: 20px;
    background: transparent;
    border-radius: 50%;
    border: 2px solid #2d8cf0;
    border-color: #2d8cf0 #2d8cf0 #2d8cf0 transparent;
    animation: loading-spin 0.6s linear;
    animation-iteration-count: infinite;
}

@keyframes loading-spin {
    0% {
        transform: rotate(0);
    }
    100% {
        transform: rotate(360deg);
    }
}
