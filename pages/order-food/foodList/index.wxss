/* pages/order-food/foodList/index.wxss */
page{
  height: 100%;
}
.food_list {
  height: calc(100% - 106rpx);
  display: flex;
  background-color: #fff;
  position: relative;
  z-index: 1;
}

.bottom_control {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  z-index: 2;
  height: 106rpx;
  background: #323232;
  display: flex;
  align-items: stretch;
}

.bottom_control .icon_box {
  width: 200rpx;
  height: 106rpx;
  position: relative;
}

.bottom_control .icon_box .icon {
  width: 170rpx;
  position: absolute;
  height: 136rpx;
  bottom: 18rpx;
  right: 0;
}

.bottom_control .control_text {
  width: 100rpx;
  flex-grow: 1;
  padding: 18rpx 20rpx;
}

.control_text .price {
  font-size: 36rpx;
  line-height: 40rpx;
  color: #ffffff;
}

.control_text .tips {
  font-size: 24rpx;
  color: #ffffff;
  line-height: 30rpx;
}

.bottom_control .control_btn {
  width: 230rpx;
  text-align: center;
  height: 106rpx;
  font-size: 38rpx;
  color: #ffffff;
  background: #FB4C43;
  text-align: center;
  line-height: 106rpx;
}

.pro-left {
  width: 160rpx;
  flex-basis: 160rpx;
  background-color: #f6f6f6;
  overflow-y: scroll;
}

.pro-title {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  font-size: 28rpx;
  color: #666666;
}

.pro-title.bgWhite {
  background: #ffffff;
}

.pro-right {
  flex: 1;
  background-color: #fff;
  overflow-y: scroll;
}

.item-title {
  width: 100%;
  height: 50px;
  line-height: 100rpx;
  padding: 0 30rpx;
  box-sizing: border-box;
  font-size: 28rpx;
  color: #666666;
}


.item-name {
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  overflow: hidden;
  word-break: break-all;
}

.pro-item {
  width: 100%;
  display: flex;
  padding: 30rpx;
  box-sizing: border-box;
}

.pro-img {
  width: 160rpx;
  height: 160rpx;
  flex-basis: 160rpx;
  flex-shrink: 0;
  border-radius: 4rpx;
  margin-right: 30rpx;
  background-color: #f5f5f5;
  position: relative;
}

.pro-img .img_cover {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background: rgba(0,0,0,0.5);
  text-align: center;
  line-height: 50rpx;
  font-size: 24rpx;
  color: #ffffff;
}

.pro-text {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.pro-tag {
  color: #999999;
  font-size: 22rpx;
  text-align: right;
}

.pro-tag text {
  padding: 4rpx 10rpx;
  background-color: rgba(240, 141, 49, 0.15);
  margin-right: 10rpx;
  border-radius: 2rpx;
}

.pro-bottom {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.count {
  width: 170rpx;
  flex-basis: 170rpx;
  background-color: #f6f6f6;
  border-radius: 28rpx;
  display: flex;
}

.count text {
  flex: 1;
  text-align: center;
  line-height: 50rpx;
}