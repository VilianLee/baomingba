/* pages/login/login.wxss */
page {
  background-color: #ffffff;
}
.login {
  padding-top: 100rpx;
}

.app_logo {
  width: 200rpx;
  height: 200rpx;
  margin: 0 auto 40rpx;
}

.app_name {
  font-size: 32rpx;
  color: #333333;
  text-align: center;
  line-height: 40rpx;
  margin-bottom: 400rpx;
}

.btn_wrap {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 100rpx;
  padding: 0 40rpx;
}

.btn_row {
  margin-bottom: 30rpx;
}

.login_btn button {
  background-color: #638EF6;
}

.cancel_btn button {
  border: solid 1rpx #638EF6;
  background-color: transparent;
  color: #638EF6;
}

