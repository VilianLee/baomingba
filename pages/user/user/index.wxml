<!--pages/user/user/index.wxml-->
<view class="mine_page">
  <view class="mine_block">
    <block wx:if="{{isLogin}}">
      <navigator url="../personal-info/index" class="personal_base_info">
        <view class="personal_header_pic">
          <image src="{{userInfo.headPhoto}}"></image>
        </view>
        <view class="personal_base_info_content">
          <view class="name">
            {{userInfo.username}}
            <view class="authentication" wx:if="{{userInfo.authenticateStatus.authStatus}}">
              <view class="icon">
                <image src="../../../images/activities/icon_authed.png"></image>
              </view>
              <text wx:if="{{userInfo.authenticateStatus.authType === 1}}">个人认证</text>
              <text wx:if="{{userInfo.authenticateStatus.authType === 2}}">企业认证</text>
              <text wx:if="{{userInfo.authenticateStatus.authType === 3}}">组织认证</text>
              <text wx:else>已认证</text>
            </view>
            <view class="authentication_disable" catchtap="" wx:else>
              <view class="icon">
                !
              </view>
              未认证
            </view>
          </view>
          <view class="phoneNum">{{userInfo.telephone}}</view>
        </view>
      </navigator>
    </block>
    <block wx:else>
      <view class="login_fram">
        <view class="btn-area">
          <button type="primary" size="mini" open-type="getUserInfo" bindgetuserinfo="getUserInfo">使用微信登录</button>
        </view>
      </view>
    </block>
  </view>
  <navigator url="../wallet/index" class="input_cell">
    <view class="input_cell_row">
      <view class="label is_link">
        <view class="input_cell_icon">
          <image src="../../../images/mine/icon_wallet.png"></image>
        </view>
        我的钱包
      </view>
    </view>
  </navigator>
  <view class="input_cell">
    <button class="input_cell_row" open-type="share">
      <view class="label is_link">
        <view class="input_cell_icon">
          <image src="../../../images/mine/icon_share.png"></image>
        </view>
        推荐报名吧给好友
      </view>
    </button>
    <!-- <view class="input_cell_row">
      <view class="label is_link">
        <view class="input_cell_icon">
          <image src="data:image/png;base64,"></image>
        </view>
        下载报名吧APP
      </view>
    </view> -->
    <view class="input_cell_row">
      <view class="label is_link">
        <view class="input_cell_icon">
          <image src="data:image/png;base64,"></image>
        </view>
        关注公众号
      </view>
    </view>
    <navigator url="../../about/about-us/index" class="input_cell_row">
      <view class="label is_link">
        <view class="input_cell_icon">
          <image src="data:image/png;base64,"></image>
        </view>
        关于报名吧
      </view>
    </navigator>
  </view>
  <view class="input_cell">
    <navigator url="../../about/contact/index" class="input_cell_row">
      <view class="label is_link">
        <view class="input_cell_icon">
          <image src="data:image/png;base64,"></image>
        </view>
        联系我们
      </view>
    </navigator>
    <navigator url="../../about/feedback/index" class="input_cell_row">
      <view class="label is_link">
        <view class="input_cell_icon">
          <image src="data:image/png;base64,"></image>
        </view>
        意见反馈
      </view>
    </navigator>
  </view>
  <view class="input_cell">
    <view class="input_cell_row">
      <view class="label is_link">
        <view class="input_cell_icon">
          <image src="../../../images/mine/icon_scan.png"></image>
        </view>
        扫一扫
      </view>
    </view>
  </view>
</view>

<i-modal title="需要获取您的手机号" visible="{{ getPhoneNumVisible }}" show-ok="{{false}}" show-cancel="{{false}}" actions="{{ allowActions }}">
  <view>
    <button size="mini" bindtap="alertHidden" style="margin-right: 20rpx">
      取消
    </button>
    <button type="primary" size="mini" open-type="getPhoneNumber" bindgetphonenumber="getPhoneNumber" binderror="openTypeError">允许</button>
  </view>
</i-modal>