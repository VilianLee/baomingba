<!--pages/hot/hot.wxml-->
<mp-navigation-bar loading="{{loading}}" show="{{true}}" back="{{false}}" animated="{{true}}" background="#ffffff" title="我">
</mp-navigation-bar>
<view class="hot_page">
  <view class="location_row">
    <picker bindchange="bindPickerChange" data-key="location" value="{{location}}" range="{{locationArr}}">
      <view class="location_picker">
        {{locationArr[location]}}
      </view>
    </picker>
  </view>
  <view class="active_list">
    <navigator url="../activities/activity-details/index?id={{item.id}}" class="active_card" wx:for="{{hotList}}" wx:key="id">
    <view class="active_logo">
      <image src="{{item.covers[0]}}"></image>
    </view>
    <view class="active_content">
      <view class="active_name">
        {{item.title}}
      </view>
      <view class="active_sponsor">主办方：{{item.username}}</view>
      <view class="active_info">
        <view class="active_info_item">
          <i-icon type="coordinates" color="#999999" size="12"/>
          {{item.addressShort}}
        </view>
        <view class="active_info_item">
          <i-icon type="time" color="#999999" size="12"/>
          {{item.dayStr}}
        </view>
        <view class="active_info_item" style="text-align:center">
          <text>{{item.signUpCount}}</text>报名
        </view>
      </view>
    </view>
  </navigator>
  </view>
</view>
<i-spin fix custom wx:if="{{loading}}">
  <view class="loading"></view>
</i-spin>