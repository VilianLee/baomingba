      <view class="form_item">
        <switch color="#fda402" checked="{{activity.hideJoinerList}}" data-key="" bindchange="switchChange" />
      </view>
    </view>
  </view> -->

  <view class="input_cell" style="margin-bottom: 40rpx;">
    <view class="tip_text">开启后，详情页将不显示活动地址</view>
    <view class="input_cell_row">
      <view class="label">隐藏活动地址</view>
      <view class="form_item">
        <switch color="#fda402" checked="{{activity.hideAddr}}" data-key="hideAddr" bindchange="inputOnChange" />
      </view>
    </view>
  </view>

