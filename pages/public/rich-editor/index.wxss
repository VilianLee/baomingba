/* pages/public/rich-editor/index.wxss */
@import "./common/lib/weui.wxss";
@import "./assets/iconfont.wxss";

page {
  background-color: #ffffff;
}
.container {
  padding: 0;
}

.ql-container {
  box-sizing: border-box;
  width: 100%;
  height: 100%;
  font-size: 28rpx;
  line-height: 44rpx;
  overflow: auto;
  padding: 15rpx 15rpx 30rpx 15rpx;
  border-top: 1rpx solid #ECECEC;
}

.ql-active {
  color: #22C704;
}

.iconfont {
  width: 60rpx;
  height: 60rpx;
  cursor: pointer;
  font-size: 32rpx;
  text-align: center;
  line-height: 60rpx;
}

.toolbar {
  box-sizing: border-box;
  padding: 20rpx;
  height: 100rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.submit_btn {
  height: 90rpx;
  background-color: #fda402;
  text-align: center;
  line-height: 90rpx;
  font-size: 32rpx;
  color: #ffffff;
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
}