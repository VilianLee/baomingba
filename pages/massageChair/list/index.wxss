/* pages/massageChair/list/index.wxss */
page {
  background: #ffffff;
}

.search_box {
  border-radius: 32rpx;
  height: 64rpx;
  overflow: hidden;
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin: 40rpx 60rpx;
}

.search_box .input_box {
  height: 64rpx;
  border-top-left-radius: 32rpx;
  border-bottom-left-radius: 32rpx;
  border: solid 1rpx #e6e6e6;
  border-right: none;
  width: 300rpx;
  flex-grow: 1;
  padding: 10rpx 30rpx;
}

.search_box .search_btn {
  background: #fce349;
  height: 64rpx;
  width: 200rpx;
  text-align: center;
  line-height: 64rpx;
  font-size: 28rpx;
  color: #333333;
}

.title_box {
  display: flex;
  margin-bottom: 30rpx;
  height: 40rpx;
  align-items: center;
  justify-content: center;
}

.title_box .title_line {
  width: 60rpx;
  height: 2rpx;
  background: #666666;
}

.title_box .title_text {
  font-size: 28rpx;
  color: #666666;
  margin: 0 30rpx;
}

.product_list {
  padding: 0 40rpx;
  margin-bottom: 50rpx;
}

.product_item {
  padding: 10rpx;
  display: flex;
  justify-content: space-between;
  position: relative;
  z-index: 0;
  color: #666666;
  align-items: center;
  border-top-left-radius: 10rpx;
  border-bottom-left-radius: 10rpx;
  border-top-right-radius: 45rpx;
  border-bottom-right-radius: 45rpx;
  margin-bottom: 30rpx;
  font-size: 28rpx;
}

.product_item.selected {
  box-shadow: 0 0 0 5rpx #ffc300;
  font-size: 32rpx;
  color: #ffac00;
  font-weight: bold;
}

.product_item .icon {
  width: 70rpx;
  height: 70rpx;
}

.product_item .name {
  width: 30%;
  flex-grow: 1;
  line-height: 40rpx;
  padding: 0 30rpx;
  font-size: inherit;
  font-weight: inherit;
  color: inherit;
}

.product_item .time {
  width: 30%;
  line-height: 40rpx;
  padding: 0 30rpx;
  font-size: inherit;
  font-weight: inherit;
  color: inherit;
}

.product_item .price {
  width: 25%;
  line-height: 40rpx;
  padding: 0 30rpx;
  font-size: inherit;
  font-weight: inherit;
  color: inherit;
}

.product_item .foot_mark {
  position: absolute;
  width: 75rpx;
  height: 51rpx;
  left: -16rpx;
  top: -15rpx;
  z-index: 1;
}

.product_item .foot_mark .mark_bg {
  height: 100%;
}


.product_item .foot_mark .mark_text {
  font-size: 24rpx;
  line-height: 40rpx;
  text-align: center;
  color: #ffffff;
  position: absolute;
  left: 0;
  top: 0;
  right: 0;
  bottom: 0;
}

.agreement{
  margin-bottom: 40rpx;
  display: flex;
  align-items: center;
  padding: 0 40rpx;
}
.agreement .radio {
  width: 38rpx;
  height: 38rpx;
  margin-right: 20rpx;
}

.agreement .text {
  font-size: 24rpx;
  color: #999999;
}

.agreement navigator{
  font-size: 24rpx;
  color: #666666;
}

.pay_btn {
  margin: 0 30rpx 30rpx;
  border-radius: 42rpx;
  height: 84rpx;
  line-height: 84rpx;
  text-align: center;
  background: #ffe100;
  color: #464646;
  font-size: 36rpx;
}

.page_tips {
  font-size: 24rpx;
  color: #999999;
  margin-bottom: 20rpx;
  line-height: 30rpx;
  text-align: center;
}

.float_btn{
  position: fixed;
  right: 30rpx;
  bottom: 30rpx;
  opacity: 0.8;
}

.float_btn .btn_icon {
  width: 106rpx;
  height: 106rpx;
  margin-bottom: 10rpx;
}

.float_btn .btn_text{
  font-size: 24rpx;
  color: #464646;
  text-align: center;
}