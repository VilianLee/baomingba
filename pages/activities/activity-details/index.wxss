/* pages/activities/activity-details/index.wxss */

page {
  background: #f2f2f2;
}

.detail_page {
  box-sizing: border-box;
}

.detail_page view {
  box-sizing: border-box;
}

.banner {
  height: 562rpx;
  position: relative;
  z-index: 1;
}

.banner_swiper {
  height: 562rpx;
  position: relative;
  z-index: 1;
}

.banner_control {
  box-sizing: border-box;
  z-index: 10;
  position: absolute;
  bottom: 0;
  left: 0;
  height: 80rpx;
  width: 100%;
  padding: 0 28rpx;
  background: -webkit-linear-gradient(transparent, rgba(0, 0, 0, 0.3));
  background: linear-gradient(transparent, rgba(0, 0, 0, 0.3));
  display: flex;
  justify-content: space-between;
}

.banner_control .left_item {
  height: 80rpx;
  padding: 20rpx 0;
  line-height: 40rpx;
  font-size: 28rpx;
  color: #ffffff;
}

.control_icon {
  float: left;
  height: 40rpx;
  width: 40rpx;
  margin-right: 15rpx;
}

.banner_control .right_item{
  height: 80rpx;
  padding: 20rpx 0;
  line-height: 40rpx;
  font-size: 28rpx;
  color: #ffffff;
}

.detail_base {
  padding: 20rpx 30rpx;
}

.activity_tittle {
  font-size: 36rpx;
  color: #333;
  line-height: 48rpx;
  margin-bottom: 30rpx;
}

.detail_base .sign_des {
  font-size: 26rpx;
  color: #333;
  line-height: 30rpx;
}

.detail_base .sign_des text {
  float: right;
  color: #666;
}

.organizer {
  padding: 0 30rpx;
}

.block_title {
  padding: 20rpx 0;
  font-size: 28rpx;
  color: #666;
  line-height: 36rpx;
  border-bottom: solid 1rpx #eee;
}

.organizer_content {
  padding: 30rpx 0;
}

.organizer_pic {
  float: left;
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  overflow: hidden;
}

.organizer_info {
  float: left;
  width: 530rpx;
  padding-left: 30rpx;
}

.organizer_name {
  font-size: 32rpx;
  line-height: 40rpx;
  color: #333;
  font-weight: bold;
  height: 40rpx;
  margin-bottom: 20rpx;
}

.auth_type {
  margin-bottom: 20rpx;
}

.auty_type_tag {
  float: left;
  border-radius: 20rpx;
  height: 40rpx;
  text-align: center;
  line-height: 40rpx;
  padding: 0 20rpx;
}

.tag_unauth {
  border: solid 1rpx #f84810;
  font-size: 24rpx;
  color: #f84810;
}

.type_icon_err {
  display: inline-block;
  width: 30rpx;
  height: 30rpx;
  border-radius: 50%;
  background: #f84810;
  text-align: center;
  line-height: 30rpx;
  color: #fff;
  margin-right: 5rpx;
}

.auty_type_options .option_item {
  float: left;
  margin-right: 40rpx;
  font-size: 26rpx;
  color: #333;
  line-height: 40rpx;
}

.tag_authed {
  background: #ffa404;
  color: #fff;
  font-size: 24rpx;
  line-height: 40rpx;
}

.type_icon_authed {
  float: left;
  height: 36rpx;
  width: 36rpx;
  margin-right: 5rpx;
  margin-top: 2rpx;
}

.organizer_des {
  font-size: 24rpx;
  line-height: 32rpx;
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  color: #999;
  margin: 0 auto 30rpx;
}

.organizer_control {
  padding-bottom: 30rpx;
}

.organizer_control_item {
  float: left;
  width: 50%;
}

.organizer_btn {
  width: 280rpx;
  margin: auto;
  height: 60rpx;
  background: #ffa404;
  line-height: 60rpx;
  color: #fff;
  font-size: 30rpx;
  text-align: center;
  border-radius: 4rpx;
}

.product_detail_pic {
  padding: 30rpx;
}

.product_detail_pic img {
  width: 100%;
}

.evaluate {
  padding: 30rpx;
}

.block_title text {
  float: right;
  color: #ffa404;
  font-weight: bold;
}

.my_pic {
  float: left;
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  overflow: hidden;
}

.evaluate_content {
  float: left;
  width: 570rpx;
  margin-left: 30rpx;
  height: 60rpx;
  border: solid 1rpx #eee;
  border-radius: 4rpx;
  padding: 9rpx 30rpx;
  line-height: 40rpx;
  color: #999;
  font-size: 26rpx;
}

.detail_control {
  position: fixed;
  bottom: 0;
  z-index: 9;
  left: 0;
  right: 0;
  background: #fafafa;
  height: 90rpx;
  box-shadow: 0 0 10rpx 0 rgba(0, 0, 0, 0.1);
}

.base_btn {
  float: left;
  width: 120rpx;
  height: 90rpx;
  padding: 10rpx 0 0;
}

.base_btn .icon {
  width: 46rpx;
  height: 46rpx;
  margin: auto;
}

.base_btn .name {
  line-height: 34rpx;
  font-size: 20rpx;
  color: #777;
  text-align: center;
}

.join_btn {
  height: 90rpx;
  line-height: 90rpx;
  float: right;
  background: #ffa404;
  color: #fff;
  font-size: 40rpx;
  text-align: center;
  padding: 0 80rpx;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
  width: 510rpx;
}

.cancel_btn {
  height: 90rpx;
  line-height: 90rpx;
  float: right;
  background: #8ea5e9;
  color: #fff;
  font-size: 30rpx;
  text-align: center;
  white-space: nowrap;
  width: 255rpx;
}

.pay_btn {
  height: 90rpx;
  line-height: 90rpx;
  float: right;
  background: #ffa404;
  color: #fff;
  font-size: 32rpx;
  white-space: nowrap;
  text-align: center;
  width: 255rpx;
}

.disable_btn {
  background: #f0f0f2;
  color: #888;
}

.cover_bg {
  position: fixed;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  background: rgba(0, 0, 0, 0.4);
  z-index: 10;
}

.cover_block {
  width: 560rpx;
  background: #ffc349;
  position: absolute;
  top: 50%;
  left: 50%;
  margin-left: -280rpx;
  transform: translateY(-50%);
  border-radius: 20rpx;
  overflow: hidden;
  padding-bottom: 30rpx;
}

.cover_block_title {
  height: 100rpx;
  padding: 20rpx 30rpx;
  font-size: 30rpx;
  line-height: 60rpx;
  color: #333;
  text-align: center;
}

.cover_close {
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  right: 30rpx;
  top: 30rpx;
  border-radius: 20rpx;
  background: #ffffff;
  padding: 10rpx;
}

.cover_block_content::before {
  content: "";
  height: 1rpx;
  background: #f29837;
  box-shadow: 0 2rpx 4rpx #ffad3b;
  border-radius: 2rpx;
  display: block;
  position: absolute;
  top: -1rpx;
  right: -10rpx;
  left: -10rpx;
}

.cover_block_content {
  margin: 0 30rpx;
  position: relative;
  padding: 30rpx;
  background: #ffdfa4;
  margin-bottom: 30rpx;
}

.cover_block_text {
  font-size: 24rpx;
  color: #461b00;
  line-height: 32rpx;
  margin-bottom: 10rpx;
  text-align: center
}

.cover_block_content .cover_block_text text {
  font-weight: bold;
}

.cover_block_content .join_code_img {
  width: 320rpx;
  margin: auto;
  border: solid 1rpx #461b00;
  border-radius: 8rpx;
  overflow: hidden;
}

.cover_block_content .join_code_img image {
  display: block;
}

.cover_btn {
  margin: 20rpx 30rpx 0;
  height: 90rpx;
  line-height: 90rpx;
  font-size: 30rpx;
  color: #333333;
  text-align: center;
  border-radius: 4rpx;
  background: #ffffff;
}


.cover_view {
  position: fixed;
  top: 0;
  right: 0;
  left: 0;
  bottom: 0;
  background: rgba(0,0,0,0.3);
}
.show_qr_code_frame {
  width: 580rpx;
  position: absolute;
  top: 50%;
  left: 50%;
  margin-left: -290rpx;
  transform: translateY(-50%);
  background: #ffffff;
  padding: 30rpx 60rpx;
}

.show_qr_code_image {
  height: 460rpx;
  margin-bottom: 20rpx;
}

.show_qr_code_tips {
  line-height: 36rpx;
  font-size: 28rpx;
  color: #999999;
  text-align: center;
}

.manage_btn {
  width: 690rpx;
  margin: 60rpx auto;
  height: 90rpx;
  border-radius: 8rpx;
  text-align: center;
  line-height: 90rpx;
  color: #ffffff;
  font-size: 32rpx;
  background: #f45051;
}

.disabled {
  background: #cccccc;
  color: #ffffff;
  border: solid 1rpx #cccccc;
}

.cancel_frame{
  width: 580rpx;
  position: absolute;
  top: 50%;
  left: 50%;
  margin-left: -290rpx;
  transform: translateY(-50%);
  background: #ffffff;
  border-radius: 12rpx;
  overflow: hidden;
}
.cover_view_title {
  height: 90rpx;
  line-height: 90rpx;
  padding: 0 30rpx;
  font-size: 28rpx;
  color: #333333;
  border-bottom: solid 1rpx #e5e5e5;
}

.cancel_cover_content {
  padding: 30rpx;
}

.cancel_input {
  height: 90rpx;
  border: solid 1rpx #e5e5e5;
  padding: 19rpx 15rpx;
}
.cancel_input input {
  height: 50rpx;
  line-height: 50rpx;
}

.cover_control {
  height: 81rpx;
  display: flex;
  justify-content: space-between;
  border-top:  solid 1rpx #e5e5e5;
}

.cover_cancel_btn {
  width: 50%;
  border-left: solid 1rpx #e5e5e5;
  text-align: center;
  height: 80rpx;
  line-height: 80rpx;
  color: #999999;
}

.cover_btn_cancel {
  border-left: none;
  color: #ffa404;
  font-weight: bold;
}