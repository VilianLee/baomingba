<!--pages/activities/map/index.wxml-->
<map id="map" longitude="{{longitude}}" latitude="{{latitude}}" bindcontroltap="controltap" markers="{{markers}}" bindregionchange="regiOnChange" include-points="{{points}}" show-location show-compass="{{true}}" style="width: 100%; height: {{view.Height}}px;">
  <cover-view class="location" bindtap="getMyLocation">
    <cover-image src="../../../images/activities/location.png"></cover-image>
  </cover-view>
</map>
