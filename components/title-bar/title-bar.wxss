/* components/title-bar/title-bar.wxss */

.title {
  width: 100%;
  background-color: transparent;
  box-sizing: border-box;
  position: fixed;
  transform: translateZ(0);
  z-index: 999990;
  padding-top: 24px;
}

.title_text {
  text-align: center;
  font-size: 37rpx;
  color: #fff;
  line-height: 32px;
  height: 32px;
  float: left
}

.title_icon {
  float: left;
  line-height: 32px;
  padding-left: 15px;
  height: 32px;
}
.back_icon{
  height: 20px;
  width: 20px;
  float: left;
  margin-top: 6px;
  margin-right: 15px;
}
.floatL {
  float: left;
}